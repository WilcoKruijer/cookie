{
  "name": "@cookie-dev/root",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@cookie-dev/cookie-manager": "workspace:*",
    "@types/node": "^22.10.2",
    "lefthook": "^1.13.6",
    "oxlint": "^1.39.0",
    "prettier": "3.6.2",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "turbo watch --ui tui dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "build": "turbo run build --output-logs=errors-only",
    "types:check": "turbo run types:check --output-logs=errors-only",
    "test": "turbo run test --output-logs=errors-only",
    "prepare": "lefthook install",
    "ci:version": "changeset version && pnpm install",
    "ci:publish": "changeset publish && changeset tag"
  }
}
